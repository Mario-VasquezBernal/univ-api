generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-profesores"
}

datasource db {
  provider = "postgresql"
}

model Profesor {
  id        Int      @id @default(autoincrement())
  nombres   String
  apellidos String
  email     String   @unique
  telefono  String?
  titulo    String
  password  String
  titulos   Titulo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profesores")
}

model Titulo {
  id          Int      @id @default(autoincrement())
  profesorId  Int
  descripcion String
  institucion String
  fecha       DateTime
  profesor    Profesor @relation(fields: [profesorId], references: [id])

  @@map("titulos")
}
