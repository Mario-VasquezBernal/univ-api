generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-profesores"
}

datasource db {
  provider = "postgresql"
}

model Profesor {
  id        Int      @id @default(autoincrement())
  nombres   String
  apellidos String
  email     String   @unique
  telefono  String?
  titulo    String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  titulos   Titulo[]

  @@map("profesores")
}

model Titulo {
  id          Int       @id @default(autoincrement())
  profesorId  Int
  descripcion String
  institucion String?
  fecha       DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  profesor    Profesor  @relation(fields: [profesorId], references: [id], onDelete: Cascade)

  @@map("titulos")
}
