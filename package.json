{
  "name": "univ-api",
    "engines": {
     "node": ">=22.13.0",
    "npm": ">=10.0.0"
  },
  "version": "0.0.1",
  "description": "Backend con NestJS y Prisma 7 - Gesti√≥n Universitaria",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start:prod": "node dist/src/main",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "postinstall": "npm run prisma:generate",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prisma:studio:carreras": "prisma studio --config=prisma.carreras.config.ts",
"prisma:studio:profesores": "prisma studio --config=prisma.profesores.config.ts",
"prisma:studio:usuarios": "prisma studio --config=prisma.usuarios.config.ts",
    "prisma:generate": "npm run prisma:generate:usuarios && npm run prisma:generate:profesores && npm run prisma:generate:carreras",
    "prisma:generate:usuarios": "prisma generate --config=prisma.usuarios.config.ts",
    "prisma:generate:profesores": "prisma generate --config=prisma.profesores.config.ts",
    "prisma:generate:carreras": "prisma generate --config=prisma.carreras.config.ts",
    "prisma:migrate:carreras": "prisma migrate dev --config=prisma.carreras.config.ts",
  "prisma:migrate:profesores": "prisma migrate dev --config=prisma.profesores.config.ts",
  "prisma:migrate:usuarios": "prisma migrate dev --config=prisma.usuarios.config.ts",
    "seed": "dotenv -e .env -- ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.6.1",
    "jiti": "^2.4.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "dotenv-cli": "^8.0.0",
    "prisma": "^7.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0"
  }
}
