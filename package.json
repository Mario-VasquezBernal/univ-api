{
  "name": "univ-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    
    "prisma:generate": "npm run prisma:generate:usuarios && npm run prisma:generate:profesores && npm run prisma:generate:carreras",
    "prisma:generate:usuarios": "prisma generate --schema=prisma/usuarios/schema.usuarios.prisma",
    "prisma:generate:profesores": "prisma generate --schema=prisma/profesores/schema.profesores.prisma",
    "prisma:generate:carreras": "prisma generate --schema=prisma/carreras/schema.carreras.prisma",
    
    "prisma:migrate": "npm run prisma:migrate:usuarios && npm run prisma:migrate:profesores && npm run prisma:migrate:carreras",
    "prisma:migrate:usuarios": "prisma migrate dev --schema=prisma/usuarios/schema.usuarios.prisma --name usuarios",
    "prisma:migrate:profesores": "prisma migrate dev --schema=prisma/profesores/schema.profesores.prisma --name profesores",
    "prisma:migrate:carreras": "prisma migrate dev --schema=prisma/carreras/schema.carreras.prisma --name carreras",
    
    "prisma:migrate:deploy": "npm run prisma:migrate:deploy:usuarios && npm run prisma:migrate:deploy:profesores && npm run prisma:migrate:deploy:carreras",
    "prisma:migrate:deploy:usuarios": "prisma migrate deploy --schema=prisma/usuarios/schema.usuarios.prisma",
    "prisma:migrate:deploy:profesores": "prisma migrate deploy --schema=prisma/profesores/schema.profesores.prisma",
    "prisma:migrate:deploy:carreras": "prisma migrate deploy --schema=prisma/carreras/schema.carreras.prisma",
    
    "prisma:studio": "prisma studio --schema=prisma/carreras/schema.carreras.prisma",
    "prisma:studio:usuarios": "prisma studio --schema=prisma/usuarios/schema.usuarios.prisma --port 5555",
    "prisma:studio:profesores": "prisma studio --schema=prisma/profesores/schema.profesores.prisma --port 5556",
    "prisma:studio:carreras": "prisma studio --schema=prisma/carreras/schema.carreras.prisma --port 5557",
    
    "db:reset": "npm run db:reset:usuarios && npm run db:reset:profesores && npm run db:reset:carreras",
    "db:reset:usuarios": "prisma migrate reset --schema=prisma/usuarios/schema.usuarios.prisma --force",
    "db:reset:profesores": "prisma migrate reset --schema=prisma/profesores/schema.profesores.prisma --force",
    "db:reset:carreras": "prisma migrate reset --schema=prisma/carreras/schema.carreras.prisma --force",
    
    "seed": "ts-node prisma/seed.ts",
    "test:api": "echo 'Opcional: aquí puedes correr tests/e2e o colección de Postman'"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
